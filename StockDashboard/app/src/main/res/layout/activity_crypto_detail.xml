<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1A1A1A">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:src="@android:drawable/ic_menu_revert"
            app:tint="#FFFFFF" />

        <TextView
            android:id="@+id/tvCryptoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Bitcoin"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <!-- Price Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <TextView
                 android:id="@+id/tvCurrentPrice"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="105,735.8"
                 android:textColor="#FFFFFF"
                 android:textSize="32sp"
                 android:textStyle="bold"/>

             <TextView
                 android:layout_marginStart="10dp"
                 android:paddingTop="12dp"
                 android:layout_toEndOf="@+id/tvCurrentPrice"
                 android:id="@+id/tvPriceChange"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="4dp"
                 android:text="-5,191.5 (-4.68%)"
                 android:textColor="#FF4444"
                 android:textSize="16sp"/>
         </RelativeLayout>

        <TextView
            android:id="@+id/tvLastUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="20:42:21 - Thời Gian Thực"
            android:textColor="#888888"
            android:textSize="12sp"/>
    </LinearLayout>

    <!-- Tabs -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng quan"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:paddingVertical="8dp"
                android:paddingHorizontal="12dp"/>


        </LinearLayout>
    </HorizontalScrollView>

    <!-- Chart -->
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="16dp"/>

    <!-- Timeframe Buttons -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <Button
                android:id="@+id/btn1Day"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="1Ng"
                android:textSize="12sp"
                android:backgroundTint="#2A2A2A"
                android:textColor="#FFFFFF"
                android:minWidth="48dp"/>

            <Button
                android:id="@+id/btn1Week"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="1T"
                android:textSize="12sp"
                android:backgroundTint="#2A2A2A"
                android:textColor="#FFFFFF"
                android:minWidth="48dp"
                android:layout_marginStart="8dp"/>

            <Button
                android:id="@+id/btn1Month"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="1Th"
                android:textSize="12sp"
                android:backgroundTint="#2A2A2A"
                android:textColor="#FFFFFF"
                android:minWidth="48dp"
                android:layout_marginStart="8dp"/>

            <Button
                android:id="@+id/btn1Year"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="1N"
                android:textSize="12sp"
                android:backgroundTint="#2A2A2A"
                android:textColor="#FFFFFF"
                android:minWidth="48dp"
                android:layout_marginStart="8dp"/>

            <Button
                android:id="@+id/btn5Years"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="5N"
                android:textSize="12sp"
                android:backgroundTint="#4A90E2"
                android:textColor="#FFFFFF"
                android:minWidth="48dp"
                android:layout_marginStart="8dp"/>

            <Button
                android:id="@+id/btnAll"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="T.đa"
                android:textSize="12sp"
                android:backgroundTint="#2A2A2A"
                android:textColor="#FFFFFF"
                android:minWidth="48dp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Range Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Phạm vi ngày"
            android:textColor="#888888"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tvDayRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="103,632.7 - 109,232.3"
            android:textColor="#FFFFFF"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingBottom="24dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Phạm vi 52 tuần"
            android:textColor="#888888"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tvYearRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="49,486.9 - 126,186"
            android:textColor="#FFFFFF"
            android:textSize="12sp"/>
    </LinearLayout>

</LinearLayout>