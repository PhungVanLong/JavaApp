<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeColor="#99FFFFFF"
    app:strokeWidth="2dp"
    app:cardBackgroundColor="#1A000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Mã cổ phiếu -->
        <TextView
            android:id="@+id/tvTicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACB"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <!-- Giá hiện tại -->
        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: 24.5"
            android:textSize="14sp"
            android:textColor="@android:color/white" />

        <!-- Số lượng và giá mua trung bình -->
        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity: 100 @ 22.5"
            android:textSize="14sp"
            android:textColor="@android:color/white" />

        <!-- Giá trị đầu tư -->
        <TextView
            android:id="@+id/tvInvested"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invested: 2,250,000 VND"
            android:textSize="14sp"
            android:textColor="@android:color/white" />

        <!-- Giá trị hiện tại -->
        <TextView
            android:id="@+id/tvCurrent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current: 2,450,000 VND"
            android:textSize="14sp"
            android:textColor="@android:color/white" />

        <!-- Lãi/Lỗ -->
        <TextView
            android:id="@+id/tvPnL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+200,000 (+8.9%)"
            android:textColor="@android:color/holo_green_light"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingTop="4dp" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
